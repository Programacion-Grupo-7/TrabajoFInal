<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="shortcut icon" href="../Imagenes/Phoenix Logo.png" />
</head>
<body  background="../fondo.jpg">
    
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                @if (Session["id"] != null)
                {
                    @Html.ActionLink("FeniKusu", "Index", "Usuarios", new { area = "" }, new { @class = "navbar-brand" })
                }
                </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    @if (Session["id"] == null)
                    {
                        <li>@Html.ActionLink("Registrarse", "Registrarse", "Usuarios")</li>
                        <li>@Html.ActionLink("LogIn", "LogIn", "Usuarios")</li>

                    }
                    @if (Session["id"] != null)
                    {

                        <li>@Html.ActionLink("Inicio", "Index", "Usuarios")</li>
                        <li>@Html.ActionLink("Tendencia", "Tendencia", "Usuarios")</li>
                        <li>@Html.ActionLink("Perfil", "Perfil", "Usuarios")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
       
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
